{
  "manifest_version": 3,
  "name": "Educational Site Filter",
  "version": "1.0",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "http://localhost:5000/*", 
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Educational Filter",
    "default_icon": {
      "16": "icon.png" 
    }
  }
}